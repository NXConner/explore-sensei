{
  "provider": "aws-secrets-manager",
  "region": "us-east-1",
  "vault": {
    "name": "pavement-performance-suite",
    "path": "production/core",
    "rotationDays": 30
  },
  "mappings": [
    {
      "secretId": "pps/app/supabase",
      "description": "Supabase service keys and JWT secret",
      "env": {
        "SUPABASE_SERVICE_ROLE_KEY": "service_role_key",
        "SUPABASE_JWT_SECRET": "jwt_secret"
      }
    },
    {
      "secretId": "pps/app/maps",
      "description": "Mapping provider API keys",
      "env": {
        "VITE_GOOGLE_MAPS_API_KEY": "google_maps_primary",
        "VITE_MAPBOX_ACCESS_TOKEN": "mapbox"
      }
    },
    {
      "secretId": "pps/app/ml",
      "description": "Internal ML API credentials",
      "env": {
        "VITE_AI_SERVICE_KEY": "primary_key",
        "VITE_LOG_SINK_KEY": "logging_token"
      }
    }
  ],
  "bootstrap": {
    "command": "doppler setup --project pavement-performance-suite --config production",
    "notes": "Replace with your organization's secrets manager CLI. The bootstrap command should populate .env at runtime (Docker entrypoint or CI job)."
  }
}
